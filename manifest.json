{
  "manifest_version": 2,
  "name": "CAMPHOR-LGTM Google Chrome Plug-in",
  "version": "1.0",
  "author": "CAMPHOR-",
  "description": "This Google Chrome extension makes it easier to use CAMPHOR-LGTM.",
  "icons": {
    "16": "./images/icon16.png",
    "48": "./images/icon48.png",
    "128": "./images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "./images/icon19.png",
      "38": "./images/icon38.png"
    },
    "default_title": "CAMPHOR-LGTM",
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js":      ["./content/content.js"],
      "run_at":  "document_end"
    }
  ],
  "permissions": [
    "tabs", "https://github.com/*", "http://lgtm.camph.net/*"
  ]
}
